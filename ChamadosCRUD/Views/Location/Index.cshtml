@model IEnumerable<ChamadosCRUD.Models.Location>
@{
    ViewData["title"] = "Unidades";
}

<div class="row">
    <h2>Unidades</h2>
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(Model => Model.Id)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(Model => Model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(Model => Model.Rua)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(Model => Model.Bairro)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Rua)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Bairro)
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center"><h3>Não há dados cadastrados.</h3></td>
                </tr>
            }
            
        </tbody>
    </table>
</div>